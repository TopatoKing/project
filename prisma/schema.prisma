generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

//defining the status options for the orders
enum Status {
  NOT_STARTED
  IN_PROGRESS
  COMPLETE
}

//database table for Order information
model Orders {
  OrderID     Int  @id @default(autoincrement())
  UserID      String  @db.VarChar(255)
  StaffID     Int?
  OrderStatus Status @default(NOT_STARTED)
  OrderPaid   Boolean
  CakeNumber  Int
  CakeSize    Int
  CakeShape   String
  CakePriceTotal Float
  Users       Users   @relation(fields: [UserID], references: [UserID])
  Staff       Staff?   @relation(fields: [StaffID], references: [StaffID])
}

//database table for Cake information
//CakeNumber is redundant?
model Cakes {
  CakeID        Int          @id @default(autoincrement())
  CakeNumber    Int
  Type          String
  CakeStringID  String
  TypePrice     Float
  MinEst        Int
  MaxEst        Int
  CakeAllergens CakeAllergens[]
}

//database table for Sizes and their price multipliers
model Sizes {
  SizeID   Int @id @default(autoincrement())
  CakeSize Int
  Price    Float
}

//database table for user information
model Users {
  UserID       String   @id @db.VarChar(255)
  Order        Orders[]
  UserForename String
  UserSurname  String
  UserAddress  String?
  UserTown     String?
  UserCounty   String?
  UserPostcode String?
  UserEmail    String
  UserMobile   String?
  IsUserStaff  Boolean  @default(false)
}

//database table for staff information
model Staff {
  StaffID       Int   @id @default(autoincrement())
  Order         Orders[]
  StaffForename String
  StaffSurname  String
  StaffPosition String
}

//database table for allergen information
model Allergens {
  AllergenID    Int          @id @default(autoincrement())
  AllergenName  String
  CakeAllergens CakeAllergens[]
}

//database table for the allergens in each cake
model CakeAllergens {
  CakeAllergensID Int    @id @default(autoincrement())
  CakeID          Int
  AllergenID      Int
  Cakes           Cakes     @relation(fields: [CakeID], references: [CakeID])
  Allergens       Allergens @relation(fields: [AllergenID], references: [AllergenID])
}
